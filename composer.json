{
    "name": "buygo/buygo-plus-one",
    "description": "BuyGo 獨立賣場後台系統",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "BuyGo Team",
            "email": "team@buygo.me"
        }
    ],
    "require": {
        "php": ">=7.4",
        "yahnis-elsts/plugin-update-checker": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BuyGoPlus\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BuyGoPlus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit-unit.xml",
        "test:unit": "phpunit -c phpunit-unit.xml --verbose",
        "test:coverage": "phpunit -c phpunit-unit.xml --coverage-html coverage",
        "test:setup-db": "php bin/setup-test-db.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
