{
  "name": "acme/buygo-line-notify",
  "description": "Buygo Line Notify - WordPress plugin scaffold (unit tests ready)",
  "type": "wordpress-plugin",
  "require": {
    "php": "^8.0 || ^8.1 || ^8.2 || ^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "BuygoLineNotify\\": "includes/"
    },
    "classmap": [
      "includes/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BuygoLineNotify\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit-unit.xml",
    "test:unit": "phpunit -c phpunit-unit.xml --verbose",
    "test:coverage": "phpunit -c phpunit-unit.xml --coverage-html coverage"
  }
}

